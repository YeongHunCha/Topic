<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

        <!--<LinearLayout-->
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlProfile">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/ivProfilePhoto"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="michel jackson"
                    android:layout_toRightOf="@+id/ivProfilePhoto"
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:id="@+id/tvProfileName"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ib_menu"
                    android:src="@drawable/content_menu"
                    android:layout_alignParentRight="true"
                    android:background="#00ff"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlContent"
                android:layout_below="@+id/rlProfile"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="color of grow is green...."
                    android:textSize="18dp"
                    android:id="@+id/tvContent"
                    android:layout_marginBottom="5dp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivContent"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlComment"
                android:layout_below="@+id/rlContent"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#fafafa">
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/heart"
                    android:id="@+id/btnHeart"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_toRightOf="@+id/btnHeart"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/tvContentHeart"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/btnComment"
                    android:layout_alignParentRight="true"
                    android:text="Add comment"
                    android:textSize="12dp"
                    android:background="#00ff0000"/>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <!--</LinearLayout>-->
</RelativeLayout>